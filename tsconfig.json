{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./tests/*"],
      "@pages/*": ["./tests/pages/*"],
      "@fixtures/*": ["./tests/fixtures/*"],
      "@utils/*": ["./tests/utils/*"]
    },
    "types": ["node"]
  },
  "include": [
    "tests/**/*",
    "playwright.config.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results",
    "playwright-report"
  ]
}